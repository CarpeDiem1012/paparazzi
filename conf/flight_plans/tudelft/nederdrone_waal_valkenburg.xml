<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="120" ground_alt="0" lat0="52.168595" lon0="4.412444" max_dist_from_home="20000" name="Nederdrone Waal" security_height="2">
  <header>
    #include "autopilot.h"
    #include "subsystems/datalink/datalink.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="12.6" y="-48.7"/>
